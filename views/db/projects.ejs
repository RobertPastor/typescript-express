<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <%- include('../partials/header.ejs') %>

    <script>
        $(document).ready(function () {

            console.log('projects ejs - document is loaded');
            highLightNavBar('navBarProjects');
            //$("a[name='navBarProjects']").addClass("highlight-underline");

        });
    </script>

    <title> <%= title %> </title>
</head>

<body>
    <%- include('../partials/nav.ejs') %>
    <br><br><br><br>

    <div id="Projects" class="tabcontent">

        <h3>Database Projects page</h3>
        <span>Click on a project to see its branches</span>
        <div>
            <table border="1px">
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Identifier
                    </th>
                    <th>
                        Project Name
                    </th>
                </tr>

                <% rows.forEach( row => { %>

                <tr>
                    <td>
                        <a href='/db/projects/<%= row.Id %>' </a>Click to select</a>
                    </td>
                    <td><%= row.Id %></td>
                    <td><%= row.Name %></td>
                </tr>

                <% }) %>

            </table>

        </div>

    </div>
</body>

</html>